{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "lib": ["ES6", "DOM"],
      "outDir": "./build",
      "rootDir": "./src",
      "strict": true,
      "noImplicitAny": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "strictNullChecks":false
    },
    "include": ["./src", "src/types/objective.type.ts", "src/handlers/statuses.handlers.ts", "frontEnd/context"],
    "exclude": ["node_modules", "spec", "build"]
  }
  